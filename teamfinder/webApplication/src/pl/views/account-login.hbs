<head>
    <link rel="stylesheet" type="text/css" href="/login.css">
</head>

<div class="container py-4">

    <h1>Login</h1>
    {{#if error}}
        <p class="errorColor">{{error}}</p>
    {{/if}}

    {{#if printErrorMessage}}
    <h4 class="errorText">{{printErrorMessage}}</h4>
    {{/if}}

    <form method="POST">
        <div class="form-group">
            <label for="loginInputEmail">Email address</label>
            <input type="email" class="form-control" id="loginInputEmail" aria-describedby="emailHelp"
                value="{{email}}" name="email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group">
            <label for="loginInputPassword">Password</label>
            <input type="password" class="form-control" id="loginInputPassword" name="password">
        </div>

        <input type="hidden" name="_csrf" value="{{csrfToken}}">


        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <p>Or</p>

    <a class="btn btn-primary" href="/accounts/sign-up">sign-up</a>


</div>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/group-active.css">
    <title>Active Groups</title>
</head>

<body>
    <div class="container">
        <h1 class="title mb-5">Your active groups</h1>
        <div class="table-responsive col-md">
            <table class="table table-dark table-striped table-hover table-responsive-xl">
                <tbody>
                    {{#each activeGroups}}
                    <tr class="tableGroup">
                        <td><img src="/{{this.image}}.png" class="rounded img-size img-fluid" alt={{this.image}}></td>
                        <td>{{this.name}}</td>
                        <td>{{this.sport}}</td>
                        <td>City: {{this.city}}</td>
                        <td>Gender: {{this.allowedGender}}</td>
                        <td>{{this.nrOfMembers}}/{{this.memberSlots}} Members</td>
                        <td>
                            <form method="post">
                                <input type="hidden" name="_csrf" value="{{../csrfToken}}">
                                <button class="btn btn-link btn-primary" name="groupId" value="{{this.groupId}}">View
                                    Group</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</body>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>GroupNameHere</title>
    <link rel="stylesheet" href="/group-specific.css">
</head>

<div class="container py-4">
    {{#each group}}
    <div>
        <h1>Group Name: {{this.Name}}</h1>

        <div class="row">

            <div class="col-sm">
                <p>Sport: {{this.Sport}}</p>
                <p>City: {{this.City}}</p>
                <p>Members: {{this.NrOfMembers}} / {{this.MemberSlots}}</p>
                <p>Group Created: {{this.PublishingDate}}</p>


            </div>

            <div class="col-sm">

                <p>Allowed Gender: {{this.AllowedGender}}</p>
                <p>Age Restriction: {{this.MinAge}} - {{this.MaxAge}}</p>
                <p>Skill Level: {{this.SkillLevel}}</p>

            </div>

        </div>

        <a class="btn btn-primary" href="">edit group (not existing)</a>
    </div>

    <div>
        <form>
            <div class="form-row">

                <div class="col-6 my-1">

                    <textarea class="form-control" id="textarea" rows="1"
                        placeholder="Required example textarea"></textarea>
                </div>
                <div class="col-2 my-1">
                    <button type="submit" class="btn btn-primary">send message</button>
                </div>


            </div>
        </form>
    </div>

    <div>
        <div class="message-text">
            <h4>name here</h4>
            <p>message here</p>
        </div>

        <div class="message-text">
            <h4>name here</h4>
            <p>message here</p>
        </div>

        <div class="message-text">
            <div class="col...">
                <h4>name here</h4>
            </div>
            <div>
                <p>message here</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>

</div>